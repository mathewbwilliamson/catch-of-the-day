/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/
.order-enter
  transform: translateX(-120%)
  max-height: 0
  padding 0 !important
  transition 0.5s
  &.order-enter-active
    max-height 60px
    transform: translateX(0)
    padding 2rem 0 !important
    
.order-exit
  transition 0.5s
  transform: translateX(0)

  &.order-exit-active
    transform: translate(120%)
    padding 0 !important